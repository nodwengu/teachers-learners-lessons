{{> header.handlebars}}

<body>
<div class="container" style="margin-top: 5rem;">
    <div style="display: flex;">
        <a href="/learner/{{learnerId}}" type="button" class="btn btn-primary mt-2 mr-3"> < Back </a>
    </div>

    <div>
        <div class="mt-3 mb-5" style="text-align: center;">
            <h4>{{lesson.lesson_name}} : {{subjectName}}</h4>
        </div>

        <div>
            <table class="table table-bordered">
                <thead>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                </thead>
                <tbody>
                    {{#each learnerList}}
<!--                    <p>{{this}}</p>-->
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <a href="/learner/{{learnerId}}/lesson/{{lessonId}}/attend" type="button" class="btn btn-primary mt-2 mb-3 mr-3">Attend Lesson</a>
        </div>
    </div>


</div>

</body>
